    function rowFound(y,x) {
        var color = pieces[y][x].img + '';
        var redRow = 0;
        var redCol = 0;
        var blueRow = 0;
        var blueCol = 0;

        //do we have a redrow or a bluerow?
        for (var y2 = 0; y2 < rows; y2++) {

            redRow = 0;

            blueRow = 0;

            //for each col
            for (var x2 = 0; x2 < cols; x2++) {
                try {
                    if (pieces[y2][x2].img == colors.red) {

                        redRow++;
                        blueRow = 0;

                        // $("#alert").text('redRow:' + redRow );
