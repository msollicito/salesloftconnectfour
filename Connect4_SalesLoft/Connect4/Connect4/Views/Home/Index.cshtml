                            return true;
                        }

                    } else {
                        redRow = 0;
                        if (pieces[y2][x2].img == colors.blue) {

                            blueRow++;


                            if (blueRow >= 4) {

                                return true;
                            }

                        } else {
                            blueRow = 0;

                        }
                    }
                } catch (Exception) {

                }
            }
        }
        return false;
    }
    function colFoundBlue(y,x) {
        var color = pieces[y][x].img + '';
        var redRow = 0;
        var redCol = 0;
        var blueRow = 0;
        var blueCol = 0;
        //do we have a bluecol or a redcol?
        for (var x2 = 0; x2 < cols; x2++) {
            blueCol = 0;
            redCol = 0;


            //for each row
